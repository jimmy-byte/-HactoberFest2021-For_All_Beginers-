class Solution {
public:
    string smallestSubsequence(string s) {
        map<char,int>m;
       map<char,int>vis;
       stack<char>st;
       for(int i=0;i<s.size();i++){
           m[s[i]]=i;
       }
       for(int i=0;i<s.size();i++){
           if(vis[s[i]])continue;
           while(st.size() && st.top()>s[i] && m[st.top()]>i){
               vis[st.top()]=0;
               st.pop();
           }
           st.push(s[i]);
           vis[s[i]]=1;
       }
       string ans = "";
       while(st.size()){
           ans.push_back(st.top());
           st.pop();
       }
       reverse(ans.begin(),ans.end());
       return ans;
    }
};
